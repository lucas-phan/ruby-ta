                         data-splitout="none" data-elementdelay="0.1" data-endelementdelay="0.1" data-endspeed="400">
                        <%= item['text'].html_safe %>
                    </div>

                    <!-- LAYER NR. 3 -->
                    <div class="tp-caption trx-normal-white sfb fadeout tp-resizeme start text-intro full-width"
                         data-x="100" data-y="270"
                         data-speed="500" data-start="1600" data-easing="Quad.easeOut" data-splitin="none"
                         data-splitout="none" data-elementdelay="0.1" data-endelementdelay="0.1" data-endspeed="300">
                        <%= item['content'].html_safe %>
                    </div>

                    <!-- LAYER NR. 4 -->
                    <div class="tp-caption trx-no-style sfb fadeout start button-readmore" data-x="100" data-y="375"
                         data-speed="500"
                         data-start="2000" data-easing="Quad.easeOut" data-splitin="none" data-splitout="none"
                         data-elementdelay="0.1" data-endelementdelay="0.1" data-endspeed="400">
                        <a href="<%= item['link'] %>" class="sc_button sc_button_square sc_button_bg_light">
                            <span>read more</span>
                        </a>
                    </div>
