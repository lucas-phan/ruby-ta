<div class="slider_wrap slider_fullwide slider_engine_revo slider_alias_optional">

    <div id="rev_slider_wrapper" class="rev_slider_wrapper fullwidthbanner-container">
        <!-- START REVOLUTION SLIDER 4.6.92 fullwidth mode -->
        <div id="rev_slider_3_1" class="rev_slider fullwidthabanner tp-simpleresponsive">
            <ul class="tp-revslider-mainul">
                <% ary = JSON.parse(option("slide_home").value.as_json) %>
                <% ary.each do |item| %>
                <li data-transition="fade" data-slotamount="7" data-masterspeed="400" data-saveperformance="off"
                    class="tp-revslider-slidesli">
                    <!-- MAIN IMAGE -->
                    <div class="slotholder">
                        <img class="tp-bgimg defaultimg" alt="" src="<%= item['image_1'] %>"
                             data-src="<%= item['image_2'] %>">
                    </div>
                    <!-- LAYERS -->

                    <!-- LAYER NR. 2 -->
                    <div class="tp-caption trx-big-left sfb fadeout tp-resizeme start full-width" data-x="100"
