<div class="">
  <h3 class="panel-title">Create new password ?</h3>
</div>
<br>
<div class="">
  <%= @info %> 

  <% if @showform == true %>
  <p> Hello :<%= @user.name %></p>

  <%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>   

  <div class="form-group">
    <br>
    <%= f.text_field :email , placeholder: "E-mail" , :readonly => true , class:"form-control" %>
  </div>  

  <div class="form-group">
    <br>
    <%= f.password_field :password , placeholder: "Password" , class:"form-control" %>
  </div>
  <div class="form-group">
    <br>
    <%= f.password_field :password_confirmation , placeholder: "Password again" , class:"form-control" %>
  </div>    

  <div class="actions">
    <%= f.submit 'Change password' , class: "btn btn-success " %>   

  </div>
  <% end %>
  <% end %>    
  <a href="/getpass">Forget password ?</a><br> 
  <a href="<%= login_path %>">Back login page.</a>
</div>