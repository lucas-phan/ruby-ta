<%= form_for(admin_catalogue) do |f| %>
  <% if admin_catalogue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin_catalogue.errors.count, "error") %> prohibited this admin_catalogue from being saved:</h2>

      <ul>
      <% admin_catalogue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: "form-control oneline" %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image , class: "form-control oneline" %>
  </div>

  <div class="field">
    <%= f.label :parent %><br>  
    <%= f.collection_select(:parent, @catalog_list.all, :id, :fullname , {:include_blank  => 'None' }, {class: "form-control oneline" })  %> 
  </div>

  <div class="field">
    <%= f.label :order %><br>
    <%= f.number_field :order , min: 0, class: "form-control oneline" %>
  </div> 
 

  <div class="field">
    <%= f.label :slug %><br>
    <%= f.hidden_field :slug , class: "form-control oneline" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-sm btn-success" %>
  </div>
<% end %>
