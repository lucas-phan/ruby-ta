  <div class="admin main content">
    <p id="notice"><%= notice %></p>

    <p></p>
    <div class="row show-grid">
      <div class="col-md-3">
        <select class="form-control option drop_group">

          <option value="choose">choose</option>
          <% @admin_options_group.each do |admin_option| %>
          <option value="<%= admin_option.group %>" <%= (admin_option.group == @choseparam) ? "selected" : "" %>><%= admin_option.group %></option>
          <% end %>      
          <option value="">All</option>
        </select>
      </div>
      
      <div class="col-md-9">   

        <input type="text" class="form-control oneline find_by_key" value="" placeholder="Key"></input>
        <input type="button" class="btn btn-sm btn-info bnt_find_by_key" value="Search"></input> 

      </div> 
      
    </div>

    <p> 
      <div class="create new"> <%= link_to 'New Option', new_admin_option_path , class: "btn btn-sm btn-warning" %></div> 
    </p>

    <div class="box">
      <div class=" table-responsive ">
        <table class="table no-margin table-hover">
          <thead>
            <tr>
              <th>Key</th>
              <th>Value</th>
              <th>Group</th>
              <th colspan="3"></th>
            </tr>
          </thead> 

          <tbody>
            <% @admin_options.each do |admin_option| %>
            <tr class="">
             
              <td><%= link_to admin_option.key , edit_admin_option_path(admin_option)  %></td>

              <td><%=h truncate(admin_option.key.include?("password")  ? "*****" : admin_option.value.gsub(/<\/?[^>]*>/, '') , :length => 70)  %></td>
              
              <td><%= admin_option.group %></td>
              
              <td class="width60"><%= link_to 'Edit', edit_admin_option_path(admin_option) , class: "btn-xs btn btn-warning" %></td>
              <td class="width60"><%= link_to 'Delete', admin_option, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn-xs btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  
  
  
  


  


