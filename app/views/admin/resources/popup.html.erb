<div class="admin main content">
  <p id="notice"><%= notice %></p>
  <p> 
    <div class="create new"> <%= link_to 'New Resource', new_admin_resource_path , class: "btn btn-warning" %></div> 
  </p>
  <div class="table-responsive">  
    <table class="table table-striped table-bordered table-hover">
      <tbody>
        <% @admin_resources.each do |admin_resource| %>
        <tr>
          
          <% if admin_resource.group.include?('image')   %>
          <td><a href="#" onclick="goSelect('<%= admin_resource.value.include?('://') ? admin_resource.value : '/uploads/'+admin_resource.value %>')"> <%= image_tag(admin_resource.value.include?('://') ? admin_resource.value : '/uploads/'+admin_resource.value , class: "imgage thumb")  %></a> </td>  
          <% else %>
          <td></td>
          <% end  %> 
		  <td><a href="#" onclick="goSelect('<%= admin_resource.value.include?('://') ? admin_resource.value : '/uploads/'+admin_resource.value %>')"><%= admin_resource.value  %></a></td>
		  
        </tr> 
        <% end %>
       
</tbody>   
</table>
<%= raw @nextpage %> 
</div>
</div>

