 <div class=" admin main   content">
    <p id="notice"><%= notice %></p>
     <form>
    <p> 
      <div class="create new"> <%= link_to 'New Resource', new_admin_resource_path , class: "btn btn-sm btn-warning" %>
        <div class="right">
          <%= @notice %> <input type="submit" onclick="return confirm('Are you sure you want to do that ?')" class="btn btn-xs btn-danger" value="Checkbox delete" ></input> 
         
        </div>
      </div> 
    </p>
   
   <div class="box">
    <div class="table-responsive">  
      <table class="table no-margin table-hover">
        <thead>
          <tr>
            
            <th>Value</th>
            <th>Thumb</th>
            <th>Group</th>
            <th colspan="3"></th>
          </tr>
        </thead>      
        <tbody>
          <% @admin_resources.each do |admin_resource| %>
          <tr>
            <td><a href="<%= admin_resource.value.include?('://') ? admin_resource.value : '/uploads/'+admin_resource.value %>"><%= admin_resource.value  %></a></td>
            
           
            <% if admin_resource.group.include?('image')   %>

               <td><%= image_tag(admin_resource.value.include?('://') ? admin_resource.value : '/uploads/'+admin_resource.value , class: "imgage thumb")  %></td>  
            <% else %>
                <td></td>
            <% end  %> 
            
            <td><%= admin_resource.group %></td>
    
            <td class="width60"><%= link_to 'Edit', edit_admin_resource_path(admin_resource) , class: "btn-xs btn btn-warning" %></td>
            <td class="width60"><%= link_to 'Delete', admin_resource, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn-xs btn btn-danger" %></td>
            <td class="width20">  <%= check_box_tag "ids[]", admin_resource.id %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
    </div>
  <%= raw @nextpage %>  
 </form>
  </div>
 