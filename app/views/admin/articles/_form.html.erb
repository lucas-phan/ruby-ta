<%= form_for(@admin_article) do |f| %>
  <% if @admin_article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_article.errors.count, "error") %> prohibited this admin_article from being saved:</h2>

      <ul>
      <% @admin_article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image , class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content , class: "form-control" , style: "width:100%; height: 200px;" %>
  </div>
  

<div class="field">
    <%= f.label :status %><br>
    <%= f.select :status,  [['Active', 1], ['Not Active', 0]] ,{} , {class: "form-control _25"}   %>
  </div>

 <div class="field">
    <%= f.label :catalogues %><br>  
    <%= f.collection_select(:catalogues, @admin_articlenodes_list.all, :id, :name , {}, {class: "form-control _25"})  %>
  </div>
    

  <div class="field">
    <%= f.label :order %><br>
    <%= f.number_field :order , class: "form-control _25" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-sm btn-success" %>
  </div>
<% end %>
